---
export interface Props {
  name: string;
  label: string;
  class?: string;
}

const { name, label, class: className } = Astro.props;
---

<div class:list={["flex flex-col items-start py-2", className]}>
  <label for={name}>
    <slot name="label-leading" />
    {label}
  </label>
  <div class="flex w-full gap-1 border-b border-gray-600 py-2">
    <slot name="leading" />
    <select
      id={name}
      name={name}
      class="w-full appearance-none border-none bg-transparent leading-tight text-gray-700 focus:outline-none"
    >
      <option>Really long option that will likely overlap the chevron</option>
      <option>Option 2</option>
      <option>Option 3</option>
    </select>
    <slot name="trailing" />
    <div
      class="pointer-events-none inset-y-0 right-0 flex items-center px-2 text-gray-700"
    >
      <svg
        class="h-4 w-4 fill-current"
        xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20"
        ><path
          d="M9.293 12.95l.707.707L15.657 8l-1.414-1.414L10 10.828 5.757 6.586 4.343 8z"
        ></path>
      </svg>
    </div>
  </div>
</div>
