---
export interface Props {
  name: string;
  label: string;
  class?: string;
}

const { name, label, class: className } = Astro.props;
---

<label class:list={["mt-3 inline-flex items-center", className]}>
  <input name={name} type="checkbox" class="checkbox absolute z-10 opacity-0" />
  <div class="checkbox-input relative mr-4 h-6 w-6 cursor-pointer border-4">
  </div>
  <span class="cursor-pointer select-none text-gray-700">{label}</span>
</label>

<style>
  .checkbox:checked + .checkbox-input:after {
    content: "";
    position: absolute;
    width: 100%;
    height: 100%;
    background-image: url(data:image/svg+xml;base64,);
    @apply bg-yellow-600;
  }
</style>
